<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.evansdar.primer1" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="22" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="22" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Dark">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ScrollingActivity"
            android:label="ScrollingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.AgendaActivity"
            android:label="@string/title_activity_agenda"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".Activities.AttendeeActivity"
            android:label="@string/title_activity_attendee" >
        </activity>
        <activity
            android:name=".Activities.ExhibitorActivity"
            android:label="@string/title_activity_institution" >
        </activity>
        <activity android:name=".WebViewFragment"
                android:label="WebViewThing">
        </activity>
        <activity
            android:name=".Activities.SpeakerActivity"
            android:label="@string/title_activity_speaker"
            android:theme="@style/AppTheme.Dark">
        </activity>
    </application>

</manifest>
